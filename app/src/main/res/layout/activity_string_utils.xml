<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".string_utils.StringUtilsActivity">
  
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    <EditText
      android:id="@+id/edt"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />
    
    <TextView
      android:id="@+id/txt"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="24sp" />
    
    <Button
      android:id="@+id/btn_isNumeric"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="isNumeric"
      android:textAllCaps="false" />
    
    <Button
      android:id="@+id/btn_convertToCamelCase"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="convertToCamelCase"
      android:textAllCaps="false" />
    
    <Button
      android:id="@+id/btn_ellipsize"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="ellipsize"
      android:textAllCaps="false" />
    
    <Button
      android:id="@+id/btn_setBackgroundColor"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="setBackgroundColor"
      android:textAllCaps="false" />
    
    <Button
      android:id="@+id/btn_setForegroundColor"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="setForegroundColor"
      android:textAllCaps="false" />
    
    <Button
      android:id="@+id/btn_highlight"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="highlight"
      android:textAllCaps="false" />
    
    <Button
      android:id="@+id/btn_randomString"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="randomString"
      android:textAllCaps="false" />
  </LinearLayout>
</ScrollView>